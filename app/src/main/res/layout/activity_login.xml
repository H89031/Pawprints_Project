<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f8"
    tools:context=".Login">

    <TextView
        android:id="@+id/pawprints"
        android:layout_width="241dp"
        android:layout_height="62dp"
        android:fontFamily="@font/londrina_solid_black"
        android:gravity="center"
        android:text="PAWPRINTS"
        android:textColor="@color/text_black"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pawprints">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_corner"
            android:hint="Username or Email"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="15sp">

        </EditText>

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="15sp">

        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_purple"
            android:hint="Log In"
            android:textColorHint="@color/white"
            android:textSize="15sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginBottom="125dp"
        android:background="#bdc1c3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/text_account"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="Don't have an account?"
        android:textColor="#9fa3a5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <TextView
        android:id="@+id/signupbutton"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginBottom="72dp"
        android:clickable="true"
        android:onClick="signupclick"
        android:fontFamily="sans-serif-medium"
        android:gravity="right|center_vertical"
        android:text="Sign Up."
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_account"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_account"
        app:layout_constraintTop_toTopOf="@+id/text_account"
        app:layout_constraintVertical_bias="0.0">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>